---
interface Props {
  name: string;
  title: string;
  subtitle?: string;
  showProjects?: boolean;
}

const { name, title, subtitle, showProjects = true } = Astro.props;
---

<div class="hero-container">
  <div class="hero-card">
    <h1>{name}</h1>
    <h2>{title}{subtitle && <><br/>{subtitle}</>}</h2>

    <div class="buttons">
      <a href="/cv" class="btn-expand">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path><polyline points="14 2 14 8 20 8"></polyline><line x1="16" y1="13" x2="8" y2="13"></line><line x1="16" y1="17" x2="8" y2="17"></line><polyline points="10 9 9 9 8 9"></polyline></svg>
        <span>CV</span>
      </a>
      <a href="mailto:fran@tzk.ar" class="btn-expand">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>
        <span>Email</span>
      </a>
      {showProjects && (
        <a href="/projects" class="btn-expand">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"></path></svg>
          <span>Projects</span>
        </a>
      )}
      <a href="https://www.linkedin.com/in/matzkin" class="btn-expand" target="_blank">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path><rect x="2" y="9" width="4" height="12"></rect><circle cx="4" cy="4" r="2"></circle></svg>
        <span>LinkedIn</span>
      </a>
      <a href="https://github.com/vfmatzkin" class="btn-expand" target="_blank">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path></svg>
        <span>GitHub</span>
      </a>
    </div>

    <div class="more-links">
      <span class="more-trigger">more...</span>
      <div class="more-content">
        <a href="https://scholar.google.com/citations?user=ddZ2i5QAAAAJ" target="_blank">Google Scholar</a>
        <span class="separator">&middot;</span>
        <a href="https://sinc.unl.edu.ar/staff/franco-matzkin/" target="_blank">sinc(i)</a>
        <span class="separator">&middot;</span>
        <a href="https://azumo.com/author/franco-matzkin" target="_blank">Azumo</a>
      </div>
    </div>
  </div>
</div>

<style>
  .hero-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 70vh;
    padding: 2rem;
  }

  .hero-card {
    text-align: center;
    background-color: var(--bg-card);
    padding: 2rem;
    border-radius: 10px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  h1 {
    font-size: 2.5rem;
    margin: 0 0 0.5rem 0;
    font-weight: normal;
  }

  h2 {
    font-size: 1.2rem;
    font-weight: normal;
    margin: 0 0 1.5rem 0;
    color: var(--text-primary);
  }

  .buttons {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .btn-expand {
    display: flex;
    align-items: center;
    gap: 0;
    padding: 0.6rem;
    border-radius: 9999px;
    background-color: var(--bg-button);
    color: var(--text-primary);
    text-decoration: none;
    font-size: 0.85rem;
    transition: all 0.3s ease;
    overflow: hidden;
  }

  .btn-expand svg {
    flex-shrink: 0;
  }

  .btn-expand span {
    max-width: 0;
    overflow: hidden;
    white-space: nowrap;
    transition: max-width 0.3s ease, margin 0.3s ease;
  }

  .btn-expand:hover {
    background-color: var(--bg-button-hover);
    padding-right: 1rem;
  }

  .btn-expand:hover span {
    max-width: 100px;
    margin-left: 0.5rem;
  }

  .more-links {
    margin-top: 1.5rem;
    font-size: 0.75rem;
    position: relative;
    min-height: 1.5rem;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .more-trigger,
  .more-content {
    transition: opacity 0.3s ease;
  }

  .more-trigger {
    color: var(--text-secondary);
    opacity: 0.4;
    cursor: pointer;
    position: absolute;
  }

  .more-content {
    opacity: 0;
    pointer-events: none;
  }

  .more-links:hover .more-trigger {
    opacity: 0;
    pointer-events: none;
  }

  .more-links:hover .more-content {
    opacity: 1;
    pointer-events: auto;
  }

  .more-content a {
    color: var(--text-secondary);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .more-content a:hover {
    color: var(--text-primary);
  }

  .more-links .separator {
    margin: 0 0.5rem;
    color: var(--text-secondary);
    opacity: 0.5;
  }
</style>
