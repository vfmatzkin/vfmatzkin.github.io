---
import Base from './Base.astro';
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { title, description, pubDate, tags } = post.data;

const formattedDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<Base title={`${title} | Franco Matzkin`} description={description} showHomeInNav={true}>
  <article class="post">
    <header class="post-header">
      <h1>{title}</h1>
      <div class="post-meta">
        <time datetime={pubDate.toISOString()}>{formattedDate}</time>
        {tags && tags.length > 0 && (
          <div class="tags">
            {tags.map((tag) => (
              <span class="tag">#{tag}</span>
            ))}
          </div>
        )}
      </div>
    </header>

    <div class="prose">
      <slot />
    </div>

    <footer class="post-footer">
      <a href="/blog" class="back-link">
        <i class="fas fa-arrow-left"></i> Back to blog
      </a>
    </footer>
  </article>
</Base>

<style>
  .post {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }

  .post-header {
    margin-bottom: 2rem;
    text-align: center;
  }

  .post-header h1 {
    font-size: 2rem;
    margin-bottom: 0.5rem;
    font-weight: 600;
  }

  .post-meta {
    color: var(--text-secondary);
    font-size: 0.9rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.5rem;
  }

  .tag {
    background: var(--bg-button);
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.8rem;
  }

  .post-footer {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--bg-button-hover);
  }

  .back-link {
    color: var(--text-secondary);
    text-decoration: none;
    transition: color 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }

  .back-link:hover {
    color: var(--text-primary);
  }
</style>
